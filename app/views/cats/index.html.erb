<h1>Cloned Cats!</h1>

<button class="pull-right" data-role="hideCats">Hide All Cats</button>

<ul class="media-list">

  <% @cats.each do |cat| %>
    <li class="media" id="<%= cat.name.parameterize %>">
      <%= link_to cat, class: "pull-left" do %>
        <%= image_tag cat.photo.url(:thumb), class: "media-object "%>
      <% end %>
      <div class="media-body">
        <h4 class="media-heading"><%= cat.name %></h4>
        <p>
          Gender: <%= cat.gender %><br/>
          Color: <%= cat.color %>
        </p>
      </div>
    </li>
  <% end %>

</ul>
